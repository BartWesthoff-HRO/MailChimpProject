@model MailChimp.Models.ContactPerson



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Homescreen</title>
    <link href="~/styles/tijmenstyle.css" rel="stylesheet" />
</head>


<nav class="navbar navbar-expand-lg ">
    <a class="navbar-brand" href="https://www.renvl.nl/" target="_blank">  <img src="~/Content/logo.png" alt=""></a>
    <div class="navbar-nav">
        <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link active" @Html.ActionLink("Email", "Index", "Email", null, null)</a>
        <a class="nav-item nav-link active" href="mailto:test@test.com"> restultaten</a>
        <a class="nav-item nav-link active" @Html.ActionLink("ContactPersonen", "Index", "ContactPerson", null, null)</a>
    </div>
</nav>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.personid)
    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div id="ui">
                    <form class="form-group">

                        @*boveenste row*@
                        <div class="row">
                            <div class="col-lg-6">
                                <h5>Persoonlijke informatie: </h5>
                                <label>Voornaam:</label>
                                @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                <h5>bedrijfsinformatie: </h5>
                                <label>Email:</label>
                                <input type="text" name="username" class="form-control">
                            </div>
                        </div>

                        @*middelste row*@
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Tussenvoegsel:</label>
                                <input type="text" name="username" class="form-control">
                            </div>

                            <div class="col-lg-6">
                                <label>Labels:</label>
                                <input type="text" name="username" class="form-control">
                            </div>
                        </div>


                        @*onderste row*@
                        <div class="row">
                            <div class="col-lg-6">
                                <label>Achternaam:</label>
                                @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-lg-6">
                                <label>Bedrijven:</label>
                                <input type="text" name="username" class="form-control">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
}
</body>


<style>
    #ui {
        margin-top: 90px;
    }

    input[type=text] {
        margin: 8px 0;
        box-sizing: border-box;
        background-color: #f8f8f8;
        left: 500px;
        top: 80px;
        resize: none;
    }
</style>

