            <a class="nav-item nav-link active" @Html.ActionLink("ContactPersonen", "Index", "ContactPerson", null, null)</a>
        </div>
    </nav>

    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead class="bg-primary">
        
                    <th>
                        voornaam
                    </th>
                    <th>
                        achternaam
                    </th>
                    <th>
                        label
                    </th>
                    <th>
                        bedrijf
                    </th>
                    <th>
                        mail
                    </th>
                
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.FirstName </td>
                        <td> @obj.LastName</td>
                        <td> @obj.Label</td>
                        <td> @obj.Company</td>
                        <td> @obj.email</td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p> de lijst bestaat niet.</p>
    }



