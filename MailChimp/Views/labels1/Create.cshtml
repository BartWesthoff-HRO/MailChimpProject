@model MailChimp.Models.labels





<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Homescreen</title>
    <link href="~/styles/tijmenstyle.css" rel="stylesheet" />
</head>


<nav class="navbar navbar-expand-lg ">
    <a class="navbar-brand" href="https://www.renvl.nl/" target="_blank">  <img src="~/Content/logo.png" alt=""></a>
    <div class="navbar-nav">
        <a class="nav-item nav-link active" @Html.ActionLink("Home", "Index", "Home", null, null)</a>
        <a class="nav-item nav-link active" @Html.ActionLink("Email", "Index", "Email", null, null)</a>
        <a class="nav-item nav-link active" @Html.ActionLink("resultaten", "Index", "resultaten", null, null)</a>
        <a class="nav-item nav-link active" @Html.ActionLink("ContactPersonen", "Index", "ContactPersons", null, null)</a>
    </div>
</nav>



<style>
    #ui {
        margin-top: 90px;
    }
</style>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">

            <div class="row">

                <div class="col-lg-3"></div>

                <div class="col-lg-6">
                    <div id="ui">
                        <form class="form-group">

                            @*boveenste row*@
                            <div class="row">
                                <div class="col-lg-6">
                                    <h5>Label name: </h5>
                                    @Html.EditorFor(model => model.lname, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.lname, "", new { @class = "text-danger" })
                                </div>

                            </div>


                        </form>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>

                <div class="col-lg-3"></div>


            </div>

        </div>


    }
</body>

